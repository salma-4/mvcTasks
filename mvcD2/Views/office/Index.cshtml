


@{
    int indx = 1;
}


<br>
<h2 ><a href="/Office/addNew" class="btn btn-primary" role="button">ADD NEW Office</a></h2>
<hr />

<h1 class="text-center" > Offices data**** </h1>
<div class="text-center ">
    <table class="table table-striped table-primary w-75 m-4 ">
    <tr>
        <th scope="col">*</th>
        <th scope="col">ID</th>
        <th scope="col">NAME</th>
        <th scope="col">Controls</th>
    </tr>
    @foreach (Office off in Model)
    {
        <tr>
            <td >@(indx++)</td>
            <td>@off.Id </td>
            <td>@off.Name</td>
            <td><a href="/Office/Details/@off.Id">Details</a> | <a href="/Office/Edit/@off.Id"> Edit</a> | <a href="/Office/Delete/@off.Id">Delete</a></td>
        </tr>
    }
    </table>
    </div>